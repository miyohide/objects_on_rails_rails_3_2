<% entry = exhibit(entry, self) %>
<article>
    <header>
        <p>
            <time pubdate="pubdate"><%= entry.pubdate %></time>
        </p>
        <p class="entry_tags">Tags:
            <span class="tags"><%= Taggable(entry).tags %></span>
        </p>
        <h3><%= entry.title %></h3>
     </header>
     <%= entry.render_body %>
</article>

